            }
        },
        {
            "name": "win32-msvc-release",
            "inherits": "_win32-msvc",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "win32-msvc-relwithdebinfo",
            "inherits": "_win32-msvc",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "win32-msvc-analysis",
            "inherits": "_win32-msvc",
            "cacheVariables": {
                "RUN_CLANG_TIDY": "ON",
                "RUN_PVS_STUDIO": "ON",
                "MSVC_CODE_ANALYSIS": "ON",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "_win32-clang",
            "inherits": "_windows",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang-cl",
                "CMAKE_CXX_COMPILER": "clang-cl",
                "CMAKE_C_COMPILER_TARGET": "i386-pc-windows-msvc",
                "CMAKE_CXX_COMPILER_TARGET": "i386-pc-windows-msvc"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "windows-clang-x86"
                }
            }
        },
        {
            "name": "win32-clang-debug",
            "inherits": "_win32-clang",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "win32-clang-release",
            "inherits": "_win32-clang",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "win32-clang-relwithdebinfo",
            "inherits": "_win32-clang",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "win32-clang-analysis",
            "inherits": "_win32-clang",
            "cacheVariables": {
                "RUN_CLANG_TIDY": "ON",
                "RUN_PVS_STUDIO": "OFF",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "_linux",
            "inherits": "_base",
            "generator": "Ninja",
            "hidden": true,
            "cacheVariables": {
                "RUN_CPPCHECK": "OFF",
                "LINK_LIB_C": "ON",
                "LINK_LIB_M": "ON",
                "LINK_LIB_DL": "ON",
                "LINK_LIB_GCC": "ON",
                "LINK_LIB_STDCPP": "ON"
            },
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": "Linux",
                    "intelliSenseMode": "linux-gcc-x86"
                },
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "copySources": true,
                    "copyBuildOutput": true,
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}",
                    "copySourcesOptions": {
                        "exclusionList": [ ".vs", ".git", "out", "build" ]
                    }
                }
            }
        },
        {
            "name": "_linux-gcc",
            "inherits": "_linux",
            "hidden": true,
            "cacheVariables": {
                "LINKER_GOLD": "ON",
                "GCC_ANALYZER": "OFF",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "linux-gcc-debug",
            "inherits": "_linux-gcc",
            "cacheVariables": {
                "LINKER_GOLD": "OFF",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "linux-gcc-release",
