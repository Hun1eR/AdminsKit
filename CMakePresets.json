{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20
    },
    "configurePresets": [
        {
            "name": "_base",
            "binaryDir": "${sourceDir}/out/${presetName}",
            "hidden": true,
            "warnings": {
                "dev": true,
                "deprecated": true,
                "uninitialized": false,
                "unusedCli": false,
                "systemVars": true
            },
            "cacheVariables": {
                "CMAKE_MODULE_PATH": "${sourceDir}/cmake",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "ENABLE_RTTI": "OFF",
                "ENABLE_EXCEPTIONS": "OFF",
                "RUN_CLANG_TIDY": "OFF",
                "RUN_PVS_STUDIO": "OFF",
                "CSSDK_REHLDS_FIXES": "ON",
                "CSSDK_REGAMEDLL_FIXES": "ON",
                "CSSDK_REGAMEDLL_API": "ON",
                "CSSDK_REGAMEDLL_ADD": "ON"
            }
        },
        {
            "name": "_windows",
            "inherits": "_base",
            "generator": "Ninja",
            "hidden": true,
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": "Windows"
                }
            }
        },
        {
            "name": "_win32-msvc",
            "inherits": "_windows",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "MSVC_CODE_ANALYSIS": "OFF",
                "MSVC_AUTO_PARALLELIZER": "ON"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "windows-msvc-x86"
                }
            }
        },
        {
            "name": "win32-msvc-debug",
            "inherits": "_win32-msvc",
            "cacheVariables": {
